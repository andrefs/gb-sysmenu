#!/bin/bash
echo
read -p "Please make sure you have uploaded your public key to this server. You will need it later. [Ok] "
sudo aptitude install gitosis gitweb
echo
read -p "Please enter the path to your public key: [/tmp/id_rsa.pub] " -e KEY 
if [ -n "$KEY" ];
    then echo $KEY;
    else echo "/tmp/id_rsa.pub";
fi
sudo adduser git --disabled-password
